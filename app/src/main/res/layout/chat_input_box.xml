<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_addAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_blue"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:src="@drawable/add_white_ic"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />

    <com.gulshan.sirfstudymessanger.util.ChatTextBox
        android:id="@+id/edit_chat"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button_addAttachment"
        app:layout_constraintEnd_toStartOf="@id/imageButton_mic"
        app:layout_constraintStart_toEndOf="@id/button_addAttachment"
        app:layout_constraintTop_toTopOf="@id/button_addAttachment" />

    <ImageButton
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:id="@+id/imageButton_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_mic"
        app:layout_constraintBottom_toBottomOf="@id/button_addAttachment"
        app:layout_constraintEnd_toStartOf="@id/imageButton_cam"
        app:layout_constraintTop_toTopOf="@id/button_addAttachment" />

    <ImageButton
        android:layout_marginHorizontal="@dimen/margin_normal"

        android:id="@+id/imageButton_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_cam"
        app:layout_constraintBottom_toBottomOf="@id/button_addAttachment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_addAttachment" />

</androidx.constraintlayout.widget.ConstraintLayout>